{
  "name": "balance-forecast",
  "version": "1.0.0",
  "description": "Budget forecasting application with account balance tracking",
  "main": "server/index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "node server/index.js",
    "client": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "docker:build": "docker build -t balance-forecast .",
    "docker:run": "docker run -p 3600:3600 -v ./data:/app/data balance-forecast",
    "preview:cf": "npm run build && wrangler pages dev dist",
    "deploy:worker": "wrangler deploy",
    "deploy:pages": "wrangler pages deploy dist"
  },
  "keywords": [
    "budget",
    "forecast",
    "accounting",
    "balance"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@cloudflare/kv-asset-handler": "^0.3.4",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "express": "^4.18.2",
    "hono": "^4.10.6"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-datepicker": "^8.7.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.6",
    "vite": "^5.0.8",
    "wrangler": "^4.50.0"
  }
}
